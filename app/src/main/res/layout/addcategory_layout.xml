<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddCategoryActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/bg5"
    >

    <ImageView
        android:id="@+id/img_addcategory_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/txt_addcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm thức uống"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/brown"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtl_addcategory_TenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Tên menu"
            app:hintTextColor="@color/brown"
            app:boxStrokeColor="@color/brown"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/ic_baseline_airline_seat_legroom_normal_24"
            app:endIconTint="@color/brown"
            app:endIconMode="clear_text"
            android:textColorHint="@color/brown"
            app:startIconTint="@color/brown"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/brown"
                android:fontFamily="@font/muli"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/img_addcategory_ThemHinh"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg8" />

        <Button
            android:id="@+id/btn_addcategory_TaoLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_button_btn1"
            android:elevation="5dp"
            android:fontFamily="@font/aclonica"
            android:text="Thêm Menu"
            android:textColor="@color/white1" />

    </LinearLayout>


</LinearLayout>