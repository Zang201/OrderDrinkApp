<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/Grey_400"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_customstaff_HinhNV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ser"
            app:civ_border_width="5dp"
            app:civ_circle_background_color="@color/purple_700" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_customstaff_HinhNV"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/txt_customstaff_TenNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="Lập trình cùng Van"
                android:textColor="@color/brown"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_customstaff_TenQuyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:gravity="center"
                android:text="Quản Lý"
                android:textColor="@color/brown"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/txt_customstaff_SDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="SĐT: 09876543"
                android:textColor="@color/brown"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_customstaff_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:gravity="center"
                android:text="admin123@gmail.com"
                android:textColor="@color/brown"
                android:textSize="20sp"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgTimeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="340dp"
            android:layout_marginBottom="-30dp"
            android:background="@drawable/ic_baseline_calendar_today_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>